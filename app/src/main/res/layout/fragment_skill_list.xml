        android:layout_height="wrap_content"
        android:id="@+id/cb_persuasion"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_persuasion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_religion"
        android:text="RELIGION"
        android:padding="@dimen/skill_padding"
        android:layout_below="@+id/tv_persuasion"
        android:layout_toRightOf="@+id/skill_centerline"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_religion"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_religion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sleight_of_hand"
        android:text="SLEIGHT OF HAND"
        android:layout_below="@+id/tv_religion"
        android:layout_toRightOf="@id/skill_centerline"
        android:padding="@dimen/skill_padding"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_sleight_of_hand"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_sleight_of_hand"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_stealth"
        android:text="STEALTH"
        android:padding="@dimen/skill_padding"
        android:layout_below="@+id/cb_insight"
        android:layout_toRightOf="@id/skill_centerline"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_stealth"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_stealth"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_survival"
        android:text="SURVIVAL"
        android:padding="@dimen/skill_padding"
        android:layout_below="@+id/tv_stealth"
        android:layout_toRightOf="@+id/skill_centerline"
    />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_survival"
        android:layout_alignParentRight="true"
